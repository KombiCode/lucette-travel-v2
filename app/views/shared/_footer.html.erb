<footer id="footer" class="container sticky bottom-0 z-10 shadow-custom-navbar">

  <div class="flex justify-around pt-2 pb-2">
    <% if @trip && @trip.id %>
      <%= link_to trip_path(@trip) do %>
          <!-- <i class="fas fa-home text-gray-200 text-2xl"></i> -->
        <!-- %img{:src => "/images/image1.svg"} -->
        <%= image_tag "logo-icon.png", alt: "alttext", class: "h-6 mt-1" %>
      <% end %>
      <%= link_to trip_tasks_path(@trip) do %>
        <i class="fas fa-tasks text-gray-200 text-2xl"></i>
      <% end %>
    <% else %>
      <%= link_to new_trip_path() do %>
        <i class="fas fa-home text-gray-200 text-2xl"></i>
      <% end %>
    <% end %>

       <!-- add link to CGU -->
      <div>
         <%= link_to cgu_path() do %>
         <i class="fas fa-info text-gray-200 text-2xl"></i>
       <% end %>
      </div>
    <!-- end CGU -->

    <!-- <%= link_to user_session_path do %> -->
      <% if current_user %>
        <div class="inline-block text-sm px-4 py-0 leading-none rounded no-underline text-gray hover:text-gray-900 mt-0 lg:mt-0">
          <div class="relative" data-controller="dropdown">
            <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="inline-block select-none">
              <span class="appearance-none flex items-center inline-block text-gray-700">
                <button class="max-w-xs flex items-center text-sm rounded-full text-white focus:outline-none focus:shadow-solid">
                  <i class="fas fa-user text-gray-200 text-2xl"></i>
                </button>
              </span>
            </div>
            <div data-dropdown-target="menu" class="absolute right-0 top-0 w-24 hidden">
              <div class="bg-white shadow rounded border overflow-hidden">
                  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: {action: "click->dropdown#toggle"}, class: 'no-underline block px-4 py-2 text-gray-600 font-bold whitespace-no-wrap' %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <i class="far fa-user text-gray-200 text-2xl"></i>
      <% end %>
    <!-- <% end %> -->

  </div>
</footer>
