<main class="p-4 rounded-lg shadow-lg mx-auto text-gray-200 text-center mt-2 my-auto">
  <div class="container text-white p-3 my-3 mt-6 mb-8">

     <% if @booking.photo_title.present? %>
      <%= image_tag "#{@booking.photo_title}.jpg", alt: "#{@booking.name}"%>
       <div class="mt-6"> <%= "#{@booking.name} (#{@booking.price.to_i} €)"  %>
      </div>
    <% else %>
      <div class="mt-6"> <%= "#{@booking.name} (#{@booking.price.to_i} €)"  %>
      </div>
    <% end %>
      <div class="text-gray-200 text-md font-bold px-4 pt-3 pb-2 border rounded-full my-4">
        <i class="fa fa-map-marker" aria-hidden="true"> <%= link_to @booking.address, "https://maps.google.com/?q=#{@booking.address}" %></i>
    </div>
     <div class="text-sm mb-8">
      <%= "#{@booking.begin_date.to_date.to_formatted_s(:long)}, #{@booking.end_date.to_date.to_formatted_s(:long)}" %>
      </div>
      <div class="bg-gray-100 rounded-lg text-center text-gray-700 p-2 m-2 mb-6">
        <%= link_to "Back", trip_path(@booking.trip) %>
      </div>
  </div>
  </br>
</main>

