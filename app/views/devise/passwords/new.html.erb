<div class="p-4 rounded-lg text-gray-400 text-center m-6 left-11 border-2 rounded-xl my-auto">

  <h2 class="font-black p-2 text-4xl text-center">Forgot your password ?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field p-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions p-2 mb-3">
      <%= f.submit "Send me reset password instructions", class: "text-white font-bold bg-custom-instructions {
  background-color: $lucette-gray;
}" %><br />
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
